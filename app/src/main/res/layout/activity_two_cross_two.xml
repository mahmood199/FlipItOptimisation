<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_cross_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/two_cross_two_top_text"
        android:layout_width="187dp"
        android:layout_height="67dp"
        android:layout_marginTop="88dp"
        android:text="00:000"
        android:gravity="center"
        android:textColor="#26FF00"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText">

    </TextView>


    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_cross_two_top_text">

        <Button
            android:id="@+id/first_row_first"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_margin="2dp"
            android:layout_marginRight="5dp"
            android:background="#785292"
            android:gravity="center"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/first_row_second"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="#343453"
            android:textColor="@android:color/white"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/second_row_first"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_marginRight="5dp"
            android:background="#FFC107"
            android:textSize="25sp"></Button>


        <Button
            android:id="@+id/second_row_second"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="#00BCD4"
            android:textSize="25sp"></Button>



    </GridLayout>

    <TextView
        android:id="@+id/two_cross_two_bottom_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Press start button below to begin your game"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        tools:ignore="HardcodedText">

    </TextView>

    <Button
        android:id="@+id/start"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/custom_buttons"
        android:text="Start"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_cross_two_bottom_text"
        app:layout_constraintVertical_bias="0.447"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>